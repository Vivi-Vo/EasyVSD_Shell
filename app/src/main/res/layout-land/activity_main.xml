<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:animateLayoutChanges="true"
    android:background="@color/black"
    android:id="@+id/MainLayout"
    tools:context=".MainActivity" >
    
    <GridLayout
        android:id="@+id/NavOptions"
        android:layout_width="250dp"
        android:layout_height="fill_parent"
        android:visibility="visible"
        android:background="@color/dimgray"
        android:columnCount="4"
        android:rowCount="6">
	    <ScrollView 
	        android:id="@+id/ActivityGroups_vertical"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:visibility="gone"	      
	        android:layout_marginBottom="10dp"
	        android:fillViewport="true"
	        android:background="@color/silver"
	        android:layout_column="0"
	        android:layout_row="5"/>
	    
	    <ScrollView
	        android:id="@+id/ActivityPages_vertical"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:visibility="gone"
	        android:layout_marginBottom="10dp"
	        android:fillViewport="true"
	        android:background="@color/silver"
	        android:layout_column="1"
	        android:layout_row="5"/>
	    
	    <GridLayout
	        android:id="@+id/DrawingOptions"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:visibility="gone"
	        android:layout_column="2"
	        android:layout_columnSpan="2"
	        android:layout_row="5"
	        android:columnCount="2"
	        android:rowCount="6">
	        
	        <org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
	            android:id="@+id/StylusM"
	            android:layout_row="0"
	            android:layout_column="0"
	            android:padding="0dp"
	            android:text="@string/stylus_width_m"/>
	        
	        <org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
	            android:id="@+id/StylusEL"
	            android:layout_row="0"
	            android:layout_column="1"
	            android:padding="0dp"
	            android:text="@string/stylus_width_el"/>
	        
	        <org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
	            android:id="@+id/StylusErase"
	            android:layout_row="1"
	            android:layout_column="0"
	            android:layout_gravity="top"
	            android:text="@string/stylus_erase"/>
	        
	        <org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
	            android:id="@+id/ClearDrawing"
	            android:layout_row="1"
	            android:layout_column="1"
	            android:textSize="24sp"	            
	            android:layout_gravity="top"
	            android:text="@string/clear_drawings"/>
	        
	        <org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
	            android:id="@+id/ColorBlack"
	            android:layout_row="2"
	            android:layout_column="0"
	            android:textSize="24sp"	            
	            android:layout_gravity="top"
	            android:text="@string/clear_drawings"/>
	        
	        <org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
	            android:id="@+id/ColorBlue"
	            android:layout_row="3"
	            android:layout_column="0"
	            android:textSize="24sp"	            
	            android:layout_gravity="top"
	            android:text="@string/clear_drawings"/>
	        
	        <org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
	            android:id="@+id/ColorRed"
	            android:layout_row="4"
	            android:layout_column="0"
	            android:textSize="24sp"	            
	            android:layout_gravity="top"
	            android:text="@string/clear_drawings"/>
	        
	        <org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
	            android:id="@+id/ColorPurple"
	            android:layout_row="5"
	            android:layout_column="0"
	            android:textSize="24sp"	            
	            android:layout_gravity="top"
	            android:text="@string/clear_drawings"/>
	        
	        <org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
	            android:id="@+id/ColorPink"
	            android:layout_row="2"
	            android:layout_column="1"
	            android:textSize="24sp"	            
	            android:layout_gravity="top"
	            android:text="@string/clear_drawings"/>
	        
	        <org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
	            android:id="@+id/ColorYellow"
	            android:layout_row="3"
	            android:layout_column="1"
	            android:textSize="24sp"	            
	            android:layout_gravity="top"
	            android:text="@string/clear_drawings"/>
	        
	        <org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
	            android:id="@+id/ColorWhite"
	            android:layout_row="4"
	            android:layout_column="1"
	            android:textSize="24sp"	            
	            android:layout_gravity="top"
	            android:text="@string/clear_drawings"/>
	        
	        <org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
	            android:id="@+id/ColorLimeGreen"
	            android:layout_row="5"
	            android:layout_column="1"
	            android:textSize="24sp"	            
	            android:layout_gravity="top"
	            android:text="@string/clear_drawings"/>
	    </GridLayout>
    </GridLayout>
    <SurfaceView 
  	    android:id="@+id/ActivityVideo"
  	    android:layout_height="match_parent"
  	    android:layout_width="match_parent"
  	    android:layout_toRightOf="@id/NavOptions"
        android:scaleType="fitStart"
        android:visibility="invisible"
        android:contentDescription="@string/activity_video" />
    
	<ImageView
	    android:id="@+id/ActivityImage"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_toRightOf="@id/NavOptions"
	    android:scaleType="fitStart"
	    android:visibility="visible"
	    android:contentDescription="@string/activity_image"/>
        
    <org.invotek.apps.easyvsd_shell.NewDrawingView
	    android:id="@+id/dvDrawingView"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_toRightOf="@id/NavOptions"/>
	
	<LinearLayout 
        android:id="@+id/adminPanel"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:background="@color/dimgray"
        android:visibility="gone">
        <org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
            android:id="@+id/btn_newActivity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:visibility="gone"/>
        <org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
            android:id="@+id/btn_newPage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:visibility="gone"/>
        <org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
            android:id="@+id/btn_editHotspot"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:visibility="gone"/>
        <org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
            android:id="@+id/btn_cancelHotspot"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:visibility="gone"/>
        <org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
            android:id="@+id/btn_startRecording"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:visibility="gone"/>
        <org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
            android:id="@+id/btn_endRecording"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:visibility="gone"/>
        <org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
            android:id="@+id/btn_drawingMode"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:visibility="gone"/>
        <org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
             android:id="@+id/btn_navMode"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:visibility="gone"/>
        <org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
            android:id="@+id/btn_deleteHotspot"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:visibility="gone"/>
        <org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
            android:id="@+id/btn_undo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:visibility="gone"/>
        <org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
            android:id="@+id/btn_redo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:visibility="gone"/>
        <org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
            android:id="@+id/btn_video_restart"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:visibility="gone"/>
        <org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
            android:id="@+id/btn_video_skipback"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:visibility="gone"/>
        <org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
            android:id="@+id/btn_video_play"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:visibility="gone"/>
        <org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
            android:id="@+id/btn_video_skipforward"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:visibility="gone"/>
        <org.invotek.apps.easyvsd_shell.BackgroundHighlightButton
            android:id="@+id/btn_video_pause"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:visibility="gone"/>
    </LinearLayout>

     <org.invotek.apps.easyvsd_shell.AnimatingView
        android:id="@+id/AnimationViewRemoving"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>
     
     <org.invotek.apps.easyvsd_shell.AnimatingView
        android:id="@+id/AnimationViewShowing"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

</RelativeLayout>
